{{yield
  (hash
    element=(component this.elementComponent
      model=@model
      formLayout=this.formLayout
      horizontalLabelGridClass=this.horizontalLabelGridClass
      showAllValidations=this.showAllValidations
      onChange=(action "change")
      _onChange=(action "resetSubmissionState")
    )
    group=(component this.groupComponent formLayout=this.formLayout)
    isSubmitting=this.isSubmitting
    isSubmitted=this.isSubmitted
    isRejected=this.isRejected
    resetSubmissionState=(action "resetSubmissionState")
  )
}}
