{{#if hasBlockParams}}
  {{yield
    (hash
      title=(component this.titleComponent)
      close=(component this.closeComponent onClick=(action @onClose))
    )
  }}
{{else}}
  {{#if this.closeButton}}
    {{component this.closeComponent onClick=(action @onClose)}}
  {{/if}}
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#component this.titleComponent}}{{@title}}{{/component}}
  {{/if}}
{{/if}}
